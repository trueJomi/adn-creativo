import { type Capitulo } from '../../model/capitulo.model';
export function getStaticPaths(){
    const pages: Capitulo[] = [
        {
            cap: 1,
            titulo: 'Colores del Origen',
            sinopsis: "Sinopsis del primer episodio,información de los artistas."
        },
        {
            cap: 2,
            titulo: 'El Viaje del Artista',
            sinopsis: "Sinopsis del segundo episodio, información de los artistas."
        }
    ]

    return pages.map(({ cap, sinopsis, titulo }) => ({
        params: { cap: cap.toString() },
        props: { 
            sinopsis,
            titulo    
        }
    }));
}

const { cap } = Astro.params;
const { sinopsis, titulo } = Astro.props;
