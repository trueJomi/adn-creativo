---
import { Image } from "astro:assets";
import LayoutInit from '../layouts/LayoutInit.astro';
import siluetta from '../assets/silueata.png';
---
<LayoutInit>
	<main transition:animate="slide" class="bg-background h-dvh p-10 pb-0 overflow-hidden" >
		<div class="flex flex-col justify-between md:justify-center md:space-y-5 h-full relative md:left-20">
			<div id="titulo" class="font-tittle text-5xl text-center opacity-0 duration-300 -translate-y-5 transition-all">
				<h1 class="text-primary text-[7rem] md:text-[10rem]">ADN</h1>
				<h2 class="text-primary md:text-7xl">CREATIVO</h2>
			</div>
			<div id="botones" class=" uppercase font-teko flex text-background text-xl justify-center opacity-0 transition-opacity duration-300" >
				<div class="gap-5 grid md:grid-cols-2" >
					<a class="bg-primary text-center px-8 py-4 rounded-2xl"  href="/trailler">
						empezar
					</a>
					<a class="bg-primary text-center px-8 py-4 rounded-2xl" href="/artists">
						nuestros artistas
					</a>
				</div>
			</div>
			<Image
				id="estatua"
				src={siluetta}
				alt="Silueta de un hombre con fondo blanco"
				class="h-80 w-auto mx-auto md:h-11/12 md:absolute md:bottom-0 opacity-0 md:left-[calc(50%-23rem)] transition-all duration-300 translate-y-5"
			/>
		</div>
		<!-- <picture  class=" w-full  " >
		</picture> -->
	</main>
</LayoutIni>
<script>
	document.addEventListener("astro:page-load", () => {
		const titulo = document.getElementById('titulo');
		const botones = document.getElementById('botones');
		const estatua = document.getElementById('estatua');
		if (!titulo || !botones || !estatua) {
			throw new Error('Elementos no encontrados');
		}
		setTimeout(() => {
			titulo.classList.remove('-translate-y-5');
			titulo.classList.remove('opacity-0');
		}, 500);
		setTimeout(() => {
			estatua.classList.remove('translate-y-5');
			estatua.classList.remove('opacity-0');
		}, 1000);
		setTimeout(() => {
			botones.classList.remove('opacity-0');
		}, 1500);
	})
</script>